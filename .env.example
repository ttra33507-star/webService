# WebService environment defaults

# Backend API base URL (used for both auth and general API calls)
VITE_APP_ENV=local
VITE_AUTH_BASE_URL=https://api.c4techhub.com
VITE_API_BASE_URL=https://api.c4techhub.com
VITE_DEV_API_BASE_URL=http://127.0.0.1:8000

# OAuth password client credentials
VITE_OAUTH_CLIENT_ID=
VITE_OAUTH_CLIENT_SECRET=
VITE_OAUTH_SCOPE=*

# Optional default Authorization header for the Axios client
VITE_API_AUTH_TOKEN=

# Portal (web2) base URL used for SSO callback redirects
VITE_PORTAL_BASE_URL=http://localhost:5173

# Cloudflare Turnstile site key (public)
VITE_TURNSTILE_SITE_KEY=0x4AAAAAACFDJnChOGfX0po3

# Shared secret used to request SSO tickets from the API
VITE_SSO_SHARED_SECRET=

# Development override for the portal base URL (falls back to VITE_PORTAL_BASE_URL when absent)
VITE_DEV_PORTAL_BASE_URL=http://localhost:5173

# Include services even when backend marks them invisible (useful for QA/demo environments)
VITE_INCLUDE_INVISIBLE_SERVICES=false

# Set to false only if you still want to use the SSO tunnel. Defaults to direct portal redirect (https://apps.c4techhub.com/orders/<id>)
VITE_DISABLE_PORTAL_SSO_REDIRECT=true
